<h2>Connexion</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :Vous_Ãªtes %>
    <%= f.collection_check_boxes :user_type, [[1, 'Client'] ,[2, 'Member']], :first, :last %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.email_field :username, required: true, placeholder: "Votre nom d'utilisateur ici" %>

  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :confirmez_votre_mot_de_passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Creer mon Compte" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
